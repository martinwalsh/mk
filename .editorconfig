root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = 4

[*.py]
indent_size = 4

[*.md]
# double whitespace at end of line
# denotes a line break in Markdown
trim_trailing_whitespace = false

[{Makefile,*.mk}]
indent_style = tab
indent_size = 4
